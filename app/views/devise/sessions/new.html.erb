<div class="box2">
  <div class="box-inner">
    <%= form_with model: @user, url: user_session_path, local: true do |f| %>
    <h1>ログイン</h1>
    <div class="box-email">
      <%= f.label :email, "Eメール" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "○○○○@dic.com" %>
    </div>
    <div class="box-password">
      <div class="a-row">
        <div class="column-left">
          <%= f.label :password, "パスワード" %>
        </div>
      </div>
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
    </div>
    <div class="box-login">
      <%= f.submit "ログイン" %>
      <% if devise_mapping.rememberable? %>
      <div class="remember">
        <%= f.check_box :remember_me %>
        <%= f.label :remember, "ログインしたままにする" %>
      </div>
      <% end %>
    </div>
    <% end %>

    <div class="box-newusr">
      <p><span>------------</span> 新しいお客様ですか？ <span>------------</span></p>
      <%= link_to "ゲスト（親）ログイン", users_guest_parent_sign_in_path, method: :post %><br/ >
      <%= link_to "ゲスト（子）ログイン", users_guest_child_sign_in_path, method: :post %><br/ >
      <%= link_to "ゲスト管理者ログイン", users_guest_admin_sign_in_path, method: :post %><br/ >
    </div>
  </div>
</div>